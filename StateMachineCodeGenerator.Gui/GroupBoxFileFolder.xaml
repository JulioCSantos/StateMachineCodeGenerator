<GroupBox x:Class="StateMachineCodeGenerator.Gui.GroupBoxFileFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StateMachineCodeGenerator.Gui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox.Header>
        <StackPanel Orientation="Horizontal" Height="20">
            <!--<TextBox Text="EA exported XML file"-->
            <TextBox Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:GroupBoxFileFolder}}
                        , Path=Text}" 
                     BorderThickness="0" Margin="0,0,2,0" />
            <Button Content=". . ." BorderThickness="0" Padding="2"
                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:GroupBoxFileFolder}}
                        , Path=LocateFileFolderCommand}"
                    Background="Gainsboro"/>
        </StackPanel>
    </GroupBox.Header>
</GroupBox>
