<UserControl x:Class="StateMachineCodeGenerator.Gui.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StateMachineCodeGenerator.Gui"
             xmlns:viewModels="clr-namespace:StateMachineCodeGenerator.ViewModels;assembly=StateMachineCodeGenerator.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:MainViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style x:Key="FilepathStyle"  TargetType="{x:Type TextBox}" >
            <Setter Property="MinHeight" Value="70" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <!--Left size column-->
        <Grid Grid.Row="0" Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition />
                <!--SourceFilePath-->
                <RowDefinition />
                <!--CodeTargetFolderPath-->
            </Grid.RowDefinitions>

            <!--region SourceFilePath-->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <local:GroupBoxFileFolder Text="EA exported XML file" 
                        LocateFileFolderCommand="{Binding OpenFileExplorerCommand}">
                    <TextBox  Text="{Binding EAXMLFileName}" 
                              Style="{StaticResource FilepathStyle}" />
                </local:GroupBoxFileFolder>

                <!--#region EAModel-->
                <Grid HorizontalAlignment="Right" MinWidth="200" Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="ComboBoxLabels" />
                        <ColumnDefinition Width="*" SharedSizeGroup="ComboBoxes" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="EA Model : " Margin="4,0,1,0" 
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding EAModelsList}"
                              DisplayMemberPath="ProjectName" MaxWidth="200" Margin="1,0,4,0"
                              IsReadOnly="{Binding IsModelSelectable}"
                              SelectedItem="{Binding SelectedEAModel}" />
                </Grid>
                <!--#endregion EAModel-->
            </StackPanel>
            <!--endregion SourceFilePath-->

            <!--region CodeTargetFolderPath-->
            <StackPanel Grid.Row="1" Orientation="Vertical" >
                <local:GroupBoxFileFolder Text="Target path (Generated files)" Height="Auto"
                                              LocateFileFolderCommand="{Binding OpenFileExplorerCommand}">
                    <TextBox  Text="{Binding TargetSolutionFileName}"  
                                  Style="{StaticResource FilepathStyle}" />
                </local:GroupBoxFileFolder>
                <!--#region Namespace-->
                <Grid  HorizontalAlignment="Right" MinWidth="200" Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="ComboBoxLabels" />
                        <ColumnDefinition Width="*" SharedSizeGroup="ComboBoxes" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Target Namespace : " Margin="4,0,1,0"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding NamespacesList}"
                                  MaxWidth="200" Margin="1,0,4,0"
                                  SelectedItem="{Binding SelectedNameSpace}" />
                </Grid>
                <!--#endregion Namespace-->
            </StackPanel>
            <!--endregion CodeTargetFolderPath-->
        </Grid>
        <!--middle (splitter) column-->
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Foreground="Black"  />
        <!--Right size column-->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <local:GroupBoxFileFolder Grid.Row="0" Text="StateMachineBaseFileName" 
                                      LocateFileFolderCommand="{Binding OpenFileExplorerCommand}">
                <TextBox  Text="{Binding StateMachineBaseFileName}" 
                          Style="{StaticResource FilepathStyle}" />
            </local:GroupBoxFileFolder>

            <local:GroupBoxFileFolder Grid.Row="1" Text="StateMachineDerivedFileName" 
                                      LocateFileFolderCommand="{Binding OpenFileExplorerCommand}">
                <TextBox  Text="{Binding StateMachineDerivedFileName}" 
                          Style="{StaticResource FilepathStyle}" />
            </local:GroupBoxFileFolder>

            <local:GroupBoxFileFolder Grid.Row="2" Text="MainModelBaseFilePathString" 
                                      LocateFileFolderCommand="{Binding OpenFileExplorerCommand}">
                <TextBox  Text="{Binding MainModelBaseFilePathString}" 
                          Style="{StaticResource FilepathStyle}" />
            </local:GroupBoxFileFolder>

            <local:GroupBoxFileFolder Grid.Row="3" Text="MainModelDerivedFileName" 
                                      LocateFileFolderCommand="{Binding OpenFileExplorerCommand}">
                <TextBox  Text="{Binding MainModelDerivedFileName}" 
                          Style="{StaticResource FilepathStyle}" />
            </local:GroupBoxFileFolder>
        </Grid>
    </Grid>
</UserControl>
